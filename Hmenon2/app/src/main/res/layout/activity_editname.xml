<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:text="@string/hmenon"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sombrinha"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageView" />



    <EditText
        android:password="true"
        android:id="@+id/edtNameEdit"
        android:hint="Novo Nome (mÃ­nimo 4 caracteres)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:password="true"
        android:id="@+id/edtConfirmEditName"
        android:hint="Confirme Novo Nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNameEdit"
        android:singleLine="true"
        />
    <Button
        android:id="@+id/btnConfirmEditName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRMAR"
        android:layout_marginTop="30dp"
        android:enabled="false"
        android:layout_below="@+id/edtConfirmEditName"
        android:layout_centerHorizontal="true" />


</RelativeLayout>