<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_centerVertical="true"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/hmenon"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sombrinha"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />


    <EditText
        android:id="@+id/edtEmailSignUp"
        android:hint="Email"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/edtNameSignUp"
        android:hint="Nome (mínimo 4 caracteres)"
        android:layout_below="@+id/edtEmailSignUp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"/>

    <EditText
        android:password="true"
        android:id="@+id/edtPasswordSignUp"
        android:hint="Senha (mínimo 4 caracteres)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNameSignUp"
        android:singleLine="true"
        android:layout_alignParentLeft="true" />

    <EditText
        android:password="true"
        android:id="@+id/edtConfirm"
        android:hint="Confirme Senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPasswordSignUp"
        android:singleLine="true"
         />
    <Button
        android:id="@+id/btnConfirmSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CADASTRAR"
        android:layout_below="@+id/edtConfirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:enabled="false" />


</RelativeLayout>